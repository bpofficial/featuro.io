{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "importHelpers": false,
        "module": "commonjs",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "lib": ["es6"],  
        "moduleResolution": "node",
        "target": "es5", 
        "paths": {
            "@featuro.io/common": ["libs/common/src/index.ts"],
            "@feature.io/db": ["libs/models/src/db.ts"],
            "@featuro.io/models": ["libs/models/src/index.ts"],
            "@featuro.io/node-sdk": ["libs/node-sdk/src/index.ts"],
            "@featuro.io/stripe": ["libs/common/src/stripe.ts"],
            "@featuro.io/entities": ["libs/models/src/entities.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
