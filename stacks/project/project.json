{
    "name": "project",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "stacks/project/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "stacks/project",
                "color": true,
                "command": "sls package"
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "stacks/project",
                "color": true,
                "command": "sls offline start --noPrependStageInUrl --stage=projects"
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "stacks/project",
                "color": true,
                "command": "sls deploy"
            }
        },
        "remove": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "stacks/project",
                "color": true,
                "command": "sls remove"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["stacks/project/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "stacks/project/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": ["stack"]
}
